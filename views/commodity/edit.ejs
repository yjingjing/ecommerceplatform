<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<%- include('../common/header.ejs') %>
	<title>编辑商品 - <%=commodity.name%></title>
</head>
<body>
	<%- include('../common/top.ejs') %>
	<div class="l-content">
		<%- include('../common/left.ejs') %>
		<div class="l-right">
			<div class="l-right-wrap">
				<form action="/commodity/edit" method="post" role="form" enctype="multipart/form-data">
					<input type="hidden" name="id" value="<%=commodity._id%>" />
					<div class="input-group">
						<span class="input-group-addon">商品名称</span>
						<input type="text" name="name" class="form-control" value="<%=commodity.name%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">商品价格</span>
						<input type="text" name="price" class="form-control" value="<%=commodity.price%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">商品库存</span>
						<input type="text" name="stockNum" class="form-control" value="<%=commodity.stockNum%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">商品分类</span>
						<select name="catagory" id="catagory" class="form-control">
							<%for(var i in catagories){;%>
								<option value="<%=catagories[i]._id%>" <%if(catagories[i].cname.indexOf(commodity.catagoryName)>-1){%>selected<%}%>><%=catagories[i].cname%></option>
							<%}%>
						</select>
					</div>
					<div class="input-group">
						<span class="input-group-addon">剩余天数</span>
						<input type="text" name="remainTime" class="form-control" value="<%=commodity.remainTime%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">折扣</span>
						<input type="text" name="discount" class="form-control" value="<%=commodity.discount%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">上传图片</span>
						<input type="file" name="imgSrc" id="" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">品牌名称</span>
						<input type="text" name="brandName" class="form-control" value="<%=commodity.brandName%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">商品编号</span>
						<input type="text" name="commodityCode" class="form-control" value="<%=commodity.commodityCode%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">商品毛重</span>
						<input type="text" name="commodityWeight" class="form-control" value="<%=commodity.commodityWeight%>" />
					</div>
					<div class="input-group">
						<span class="input-group-addon">生产厂地</span>
						<input type="text" name="commodityLocation" class="form-control" value="<%=commodity.commodityLocation%>" />
					</div>
					<div class="input-group">
						<input type="submit" value="编辑" />
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>